<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2 dashboard-text">Edit <%= customer.firstName %> <%= customer.lastName %></h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <a href="/view/<%= customer._id%>" class="btn btn-sm btn-outline-dark">View</a>
    </div>
  </div>
</div>


<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item text-dark "><a href="/" class="text-dark">Dashboard</a></li>
          <li class="breadcrumb-item active"><%= customer.firstName %></li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b> Last Updated : <%= new Date(customer.updatedAt).toLocaleString('en-IN', option) %></b>
      <br>
      <b> UserId :</b> <%= customer._id%>
    </div>

  </div>

</div>

<form action="/edit/<%= customer._id %>?_method=PUT" method="POST">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="firstName">First Name</label>
      <input type="text" class="form-control" id="firstName" name="firstName" value="<%= customer.firstName %>" , placeholder="First Name" required>
    </div>
    <div class="col">
      <label for="lastName">Last Name</label>
      <input type="text" class="form-control" id="lastName" name="lastName" value="<%= customer.lastName %>" , placeholder="Last Name" required>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="tel">Telephone</label>
      <input type="tel" class="form-control" id="tel" name="tel" value="<%= customer.tel %>" , placeholder="Telephone Number" required>
    </div>
    <div class="col">
      <label for="email">Email</label>
      <input type="email" class="form-control" id="email" name="email" value="<%= customer.email %>" , placeholder="Your Email" required>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="detail">Customer Details </label>
      <textarea name="detail" id="detail" class="form-control" rows="5" placeholder="Customer Details" required><%= customer.detail %></textarea>
    </div>
  </div>

  <div class="row form-group mb-4 justify-content-center align-items-center">
    <div class="col-4">
      <button type="submit" class="form-control btn btn-dark">Submit</button>
    </div>
    <div class="col-4">
      <button type="button" class=" form-control btn btn-danger my-5" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete</button>
    </div>
  </div>

</form>




<div class="modal fade" tabindex="-1" id="deleteModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">You are about to delete a Note</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>This will delete customer record of <b class="fw-bold"><%= customer.firstName %> <%= customer.lastName %></b></br></p>
        <p>Are you sure?</p>
      </div>
      <div class="modal-footer">

        <button type="button" class="btn dark" data-bs-dismiss="modal">Cancel</button>
        <form action="/edit/<%= customer._id %>?_method=DELETE" method="post" class="position-relative">
          <button type="submit" class="btn btn-danger">Yes, Remove Customer</button>
        </form>
      </div>
    </div>
  </div>
</div>